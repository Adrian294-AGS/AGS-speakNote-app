<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
   
    <style>
      .btnSearch {
        background-color: green;
        border: none;
        border-radius: 5px;
        width: 110;
        color: white;
      }

      .btnSearch:hover {
        background-color: rgb(2, 97, 2);
      }

      .AGS-LOGO {
        color: green;
      }

      #card2 {
        width: 100%;
        height: 50%;
      }

      * {
        margin: 0;
        padding: 0;
      }

      .layout {

        display: grid;
        grid:
          "header" auto
          "main" 1fr
          "." auto
          / 1fr;
        width: 100%;
        height: 100vh;
      }

      .header {
        grid-area: header;
      }

      .AGS-LOGO {
        color: green;
      }

      .main {
        grid-area: main;
        display: inline-block;
        overflow-y: auto;
        flex: 1;
        scrollbar-width: none;
      }

      #card2_border {
        border: 1px solid;
        border-color: dimgray;
      }

      .subCard1 {
        width: 70%;
      }
    </style>
  </head>
  <body>
    <section class="layout">
      <div class="header">
        <nav class="navbar navbar-expand-lg container">
          <div class="container-fluid">
            <a class="navbar-brand" href="#"><h1 class="AGS-LOGO">AGS</h1></a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a
                    class="nav-link active"
                    aria-current="page"
                    href="#"
                  >Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item dropdown">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    Dropdown
                  </a>
                  <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">Action</a></li>
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                  </ul>
                </li>
              </ul>
              <form class="d-flex" role="search">
                <input
                  class="form-control me-2"
                  type="search"
                  placeholder="Search"
                  aria-label="Search"
                  value="{{profile.username}}"
                />
                <button
                  class="btnSearch"
                  type="submit"
                >Search</button>
              </form>
            </div>
          </div>
        </nav>
      </div>
      
      <div class="main">
        <div class="card1">
          <div class="subCard1 container mt-5">
            <div class="card shadow rounded">
              <div class="card-header bg-primary text-white text-center">
                <h4><i class="bi bi-music-note-beamed"></i> Audio Upload Form</h4>
                <small>Upload audio files (MP3, WAV)</small>
              </div>

              <form action="/upload" method="POST" enctype="multipart/form-data">
                <div class="card-body text-center">

                  <label class="form-label fw-bold">Choose Audio Files to Upload</label>

                  <div id="drop-zone"
                      class="border border-secondary border-dashed rounded p-4 mb-3"
                      style="cursor: pointer; background-color: #f9f9f9;">
                    <div class="d-flex flex-column align-items-center">
                      <i class="bi bi-cloud-upload-fill fs-1 text-primary"></i>
                      <p class="m-0">Drag & drop audio files here</p>
                      <p class="text-muted small">or <span class="text-primary text-decoration-underline">click to browse</span></p>
                      <p class="text-muted small">Max file size: 10MB</p>
                      <input type="file" name="audioFiles" id="fileInput" accept=".mp3,.wav" multiple hidden>
                      <div id="fileList" class="mt-2 text-start"></div>
                    </div>
                  </div>

                  <button type="submit" class="btn btn-primary w-100" disabled id="uploadBtn">
                    <i class="bi bi-upload"></i> Upload Audio
                  </button>
                </div>

                <div class="card-footer text-center bg-light">
                  <small class="text-muted">
                    <i class="bi bi-info-circle-fill text-primary"></i> Supported formats:
                  </small><br />
                  <span class="badge bg-dark">MP3</span>
                  <span class="badge bg-dark">WAV</span>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="card2 p-2">
          <div class="subCard1 container mt-5 p-5" id="card2_border">
            <h2 class="text-center mb-4">ðŸŽ§ Audio Transcriptions</h2>

            {{#if transcriptions.length}}
              <div class="row row-cols-1 row-cols-md-2 g-4">
                {{#each transcriptions}}
                  <div class="col">
                    <div class="card h-100 shadow-sm">
                      <div class="card-header bg-primary text-white">
                        <i class="bi bi-music-note"></i> {{this.filename}}
                      </div>
                      <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Transcription:</h6>
                        <p class="card-text" style="white-space: pre-wrap;">{{this.transcription}}</p>
                      </div>
                      <div class="card-footer d-flex justify-content-between align-items-center bg-light">
                        <span class="text-muted small">Uploaded: {{this.uploadedAt}}</span>
                        <a href="/download/{{this.filename}}" class="btn btn-outline-secondary btn-sm" data-bs-toggle="tooltip" title="Download audio">
                          <i class="bi bi-download"></i> Download
                        </a>
                      </div>
                    </div>
                  </div>
                {{/each}}
              </div>
            {{else}}
              <div class="alert alert-warning text-center mt-4" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> No transcriptions found.
              </div>
            {{/if}}
          </div>
        </div>
        <div class="footer"><a href="/logout">logout</a></div>
      </div>
    </section>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
    crossorigin="anonymous"
  ></script>
  <script>
    const dropZone = document.getElementById('drop-zone');
    const fileInput = document.getElementById('fileInput');
    const fileList = document.getElementById('fileList');
    const uploadBtn = document.getElementById('uploadBtn');

    dropZone.addEventListener('click', () => fileInput.click());

    dropZone.addEventListener('dragover', e => {
      e.preventDefault();
      dropZone.classList.add('border-primary');
    });

    dropZone.addEventListener('dragleave', () => {
      dropZone.classList.remove('border-primary');
    });

    dropZone.addEventListener('drop', e => {
      e.preventDefault();
      dropZone.classList.remove('border-primary');
      fileInput.files = e.dataTransfer.files;
      showFiles();
    });

    fileInput.addEventListener('change', showFiles);

    function showFiles() {
      const files = fileInput.files;
      fileList.innerHTML = '';
      if (files.length > 0) uploadBtn.disabled = false;
      else uploadBtn.disabled = true;

      for (let file of files) {
        const sizeMB = (file.size / (1024 * 1024)).toFixed(2);
        fileList.innerHTML += `<div class="text-muted small">${file.name} (${sizeMB} MB)</div>`;
      }
    }
</script>

</html>